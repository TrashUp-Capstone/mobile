<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    tools:context=".ui.user.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="22dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:backgroundTint="@color/light_teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_coin"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/ic_coin"
                    android:layout_gravity="bottom|start"
                    android:layout_marginBottom="-20dp"
                    android:layout_marginStart="-40dp"
                    android:contentDescription="@string/ic_coin_desc"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/home_user_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/hi_message"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_your_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/your_points"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/home_user_welcome"/>

                    <TextView
                        android:id="@+id/tv_user_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="38dp"
                        android:text="@string/points"
                        android:textColor="@color/white"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@id/tv_your_points"
                        app:layout_constraintTop_toBottomOf="@id/tv_your_points"/>

                    <com.dicoding.trashup.ui.customview.MyButtonWhiteBg
                        android:id="@+id/btn_view_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="22dp"
                        android:backgroundTint="@color/white"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/reedem_points"
                        android:textColor="@color/dark_teal"
                        app:layout_constraintEnd_toEndOf="@id/tv_user_points"
                        app:layout_constraintTop_toBottomOf="@id/tv_user_points"
                        app:layout_constraintBottom_toBottomOf="@id/constraintLayout"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_recent_waste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="39dp"
            android:text="@string/recent_waste"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_profile_point"/>

        <TextView
            android:id="@+id/tv_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="22dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/view_all"
            android:textColor="@color/dark_teal"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_profile_point" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recent_waste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_add_waste"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.dicoding.trashup.ui.customview.MyButtonTransparentBg
            android:id="@+id/btn_add_waste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="33dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/add_waste"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recent_waste" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>