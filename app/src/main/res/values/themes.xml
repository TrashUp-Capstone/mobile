<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrashUp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Teks buat deskripsi bagian register,login, welcome -->
    <style name="information_desc_welcome">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
       <item name="android:layout_marginStart">33dp</item>
        <item name="android:layout_marginEnd">33dp</item>
    </style>

    <!-- Teks buat judul deskripsi bagian register,login, welcome -->
    <style name="information_title_welcome">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_teal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">33dp</item>
        <item name="android:layout_marginEnd">33dp</item>
    </style>

    <!-- Teks buat Button bagian register,login, welcome -->
    <style name="large_btn">
        <item name="android:layout_width">335dp</item>
        <item name="android:layout_height">69dp</item>
    </style>
    
    <style name="tv_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/dark_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginStart">34dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">33dp</item>
        <item name="android:layout_marginEnd">33dp</item>
    </style>

    <style name="title_app">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/title_app</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopRoundedCardView" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.TopRounded</item>
    </style>

    <style name="ShapeAppearance.TopRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


</resources>